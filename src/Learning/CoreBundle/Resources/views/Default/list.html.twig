{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h2>Série {{ serie }}</h2>
            {% if videos_by_bal|length > 0 %}
                {% for bal, videos in videos_by_bal %}
                <div style="display:inline-block;vertical-align:top;padding-left:1em;">
                    <h3>Balance {{ bal }}</h3>
                    <ul>
                        {% for video in videos %}
                        <li><a href="{{ path("show_video", { 'serie': serie, 'pathVideo' : video.basename }) }}">{{ video.description }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                {% endfor %}
            {% else %}
                <p>Aucune vidéo trouvée</p>
            {% endif %}
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <a style="margin-top:1em;" href="{{ path('homepage') }}" class="btn btn-default">Retour aux séries</a>
        </div>
    </div>
{% endblock %}
